<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardBackgroundColor="@color/kroger_blue"
    card_view:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <androidx.cardview.widget.CardView
            android:layout_width="72dp"
            android:layout_height="72dp"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="0dp"
            card_view:strokeWidth="0dp">

            <ImageView
                android:id="@+id/ivOptionImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Product image" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvOptionBrand"
                style="@style/TextBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Brand"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tvOptionName"
                style="@style/TextProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Multiple word long product"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
